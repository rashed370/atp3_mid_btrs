<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>Bus Ticket Reservation System</title>
        <!-- Bootstrap core CSS-->
        <link href="/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <!-- Custom fonts for this template-->
        <link href="/assets/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
        <!-- Custom styles for this template-->
        <link href="/assets/css/sb-admin.css" rel="stylesheet">
    </head>
    <body class="bg-dark">
        <div class="wrapper">
            <section class="hero">
              <header class="bg-light">
                <div class="container">
                  <nav class="navbar navbar-light">
                    <a href="#" class="navbar-brand mb-0">BTRS</a>
                    <div id="headerNav">
                      <ul class="nav navbar-nav">
                        <li class="nav-item active">
                          <a class="nav-link" href="/">Search</a>
                        </li>
          
                        <li class="nav-item">
                          <a class="nav-link" href="/printverify">Print/Verify</a>
                        </li>
          
                        <li class="nav-item">
                          <a class="nav-link" href="/cancel">Cancel</a>
						</li>
						
						<li class="nav-item">
                          	<a class="nav-link" href="/supportticket">Support Ticket</a>
                        </li>
          
                        <li class="nav-item">
                          <a class="nav-link" href="/login">Login</a>
                        </li>
                      </ul>
                    </div>
                  </nav>
                </div>
              </header>
            </section>
          
            <section id="sec-about" class="sec-about pt-5 pb-5">
              <div class="container">
                    <div class="card">
						<div class="card-header">
							<i class="fa fa-search"></i> Search Tickets
						</div>
						<div class="card-body">
							<form method="post">
								<div class="form-row align-items-center mb-3">
								  	<div class="col-sm-3">
										<input type="text" name="from" class="form-control" placeholder="Form">
								  	</div>
								  	<div class="col-sm-3">
									  	<input type="text" name="to" class="form-control" placeholder="To">
								  	</div>
								  	<div class="col-sm-4">
										<input type="datetime-local" name="departure" class="form-control">
									</div>
								  	<div class="col-sm-2">
										<button type="submit" class="btn btn-primary w-100">Search</button>
								  	</div>
								</div>
							</form>
							<div class="table-responsive">
								<table class="table table-bordered table-striped mb-0" id="dataTable" width="100%" cellspacing="0">
									<thead>
										<tr>
											<th>Operator</th>
											<th>Departure</th>
											<th>Arrival</th>
											<th>Seats Available</th>
											<th>Fare</th>
										</tr>
									</thead>
									<tbody>
                    <% if(busschedules && busschedules.length>0) { %>
                      <% busschedules.forEach(busschedule => { %>
                      <tr>
                          <td><%= busschedule.company %><br><%= busschedule.route %></td>
                          <td  style="text-align: center;"><%= busschedule.departure.toLocaleString('en-US', {
                               weekday: 'short',
                               month: 'long',
                               day: '2-digit',
                               year: 'numeric',
                               hour: '2-digit',
                               minute: '2-digit',
                               timeZone: 'Asia/Dhaka'
                           }) %></td>
                           <td  style="text-align: center;"><%= busschedule.arrival.toLocaleString('en-US', {
                              weekday: 'short',
                              month: 'long',
                              day: '2-digit',
                              year: 'numeric',
                              hour: '2-digit',
                              minute: '2-digit',
                              timeZone: 'Asia/Dhaka'
                          }) %></td>
                          <td>
                              0
                          </td>
                          <td>
                              <%= busschedule.fare %><br>
                              <a href="/system/busschedule/edit/<%= busschedule.id %>" class="btn btn-primary btn-sm">View Seats</a> 
                          </td>
                      </tr> 
                      <% }) %>
                      <% } else { %>
                      <tr>
                          <td colspan="5">No results found</td>
                      </tr>
                      <% } %> 
									</tbody>    
								</table>
							</div>
						</div>
					</div>
              </div>
            </section>
          </div>
    </body>
</html>
